<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    
    <Button
		android:id="@+id/calendar_day_gridcell"
		android:gravity="center"
		android:textColor="#FFFFFF"
		android:background="@drawable/calendar_button_selector"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</Button>
	
	<TextView
		android:id="@+id/num_events_per_day"
		style="@style/calendar_event_style"
		android:layout_gravity="right"
		android:layout_width="20dip"
		android:layout_height="20dip"
		>
	</TextView>

	<TextView
	    android:id="@+id/txtMes"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/num_events_per_day"
	    android:layout_alignParentLeft="true"
	    android:layout_alignRight="@+id/calendar_day_gridcell"
	    android:gravity="center_horizontal"
	    android:textColor="@color/static_text_color"
	    android:textSize="11dp" />

</RelativeLayout>